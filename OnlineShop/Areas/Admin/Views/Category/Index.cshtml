@model List<Models.Framework.tblCategory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Alias</th>
                    <th>ParentID</th>
                    <th>CreateDate</th>
                    <th>Order</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.ID</td>
                        <td>@item.Name</td>
                        <td>@item.Alias</td>
                        <td>@item.ParentID</td>
                        <td>@(item.CreatedDate.HasValue? item.CreatedDate.Value.ToLongDateString() : "")</td>
                        <td>@item.Order.GetValueOrDefault(0)</td>
                        <td>@(item.Status.GetValueOrDefault(false)?"Active":"Blocked")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
